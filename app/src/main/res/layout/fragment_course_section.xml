    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:fitsSystemWindows  = "true"
        android:ems="10"
        android:id="@+id/et_section_id_for_course"
        android:layout_below="@+id/et_course_id_for_section"
        android:layout_centerHorizontal="true"
        android:hint="Section ID"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:fitsSystemWindows  = "true"
        android:ems="10"
        android:id="@+id/et_ta_id_for_course"
        android:layout_below="@+id/et_section_id_for_course"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Teaching Assistant ID" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Course/Section"
        android:id="@+id/button_for_course_section"
        android:layout_below="@+id/et_ta_id_for_course"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" /-->

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/innerFrame"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Course"
            android:id="@+id/textView9"
            android:layout_gravity="left|top"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tv_selected_course"
            android:layout_gravity="left|top"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Section"
            android:id="@+id/textView11"
            android:layout_gravity="center_horizontal|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:layout_marginTop="20dp"
            android:id="@+id/tv_selected_section"
            android:layout_gravity="center_horizontal|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Selected TA"
            android:id="@+id/textView13"
            android:layout_gravity="right|top"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/tv_selected_ta"
            android:layout_gravity="right|top"
            android:layout_marginTop="20dp"
            android:layout_marginRight="43dp"
            android:layout_marginEnd="43dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Section"
            android:id="@+id/button_add_new_section"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal|top" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Course"
            android:id="@+id/button_show_courses"
            android:layout_marginTop="100dp"
            android:layout_gravity="left|top" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Sections"
            android:id="@+id/button_show_sections"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal|top" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="TAs"
            android:id="@+id/button_show_tas"
            android:layout_marginTop="100dp"
            android:layout_gravity="right|top" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar_course_section"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal|top"
            android:visibility="gone"/>

    </FrameLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView3"
        android:layout_below="@+id/innerFrame"
        android:layout_centerHorizontal="true"/>

    <!--ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar_course_section"
